{% extends 'layouts/app.twig' %}

{% block content %}

    <h1>Align TMX</h1>

    {% verbatim %}
    <div id="aligner-editor">
        <div class="toolbox" v-on:keydown.shift="shift">
            <button v-on:click="save" class="btn btn-success">Save TMX</button>
            <button v-if="selected.length" v-on:click="clear" class="btn btn-primary">Clear selection ({{selected.length}})</button>
        </div>
        <div class="row">
            <div class="col">
                <div class="item {{ item.class }}" v-for="item in language0" track-by="$index">
                    <div contenteditable="true" class="contents"
                        v-on:click="select('language0', item, $event)"
                        v-on:keyup.enter="split(item)">
                        {{ item.text }}
                    </div>
                    <div class="tools">
                        <i v-on:click="remove('language0', item)" class="fa fa-remove" title="Remove chunk"></i>
                        <i v-on:click="duplicate('language0', item, $index)" class="fa fa-copy" title="Duplicate chunk"></i>
                        <i v-on:click="" class="fa fa-edit" title="Edit chunk"></i>
                        <i v-if="selected.length" v-on:click="merge" class="fa fa-adjust" title="Merge chunks"></i>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="item" v-for="item in language1" track-by="$index">
                    <div contenteditable="true" class="contents" v-on:click="select(item)">
                        {{ item.text }}
                    </div>
                    <div class="tools">
                        <i v-on:click="remove('language1', item)" class="fa fa-remove"></i>
                        <i v-on:click="duplicate('language1', item index)" class="fa fa-copy"></i>
                        <i v-on:click="" class="fa fa-edit"></i>
                        <i v-if="selected.length" v-on:click="merge" class="fa fa-merge"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {% endverbatim %}



    {% if file %}
        <div class="col-md-12 text-center">
            <hr><a href="/tmx/download/{{ file }}" class="btn btn-success btn-sm"><i class="fa fa-download"></i> Download: {{ file }}.tmx</a>
        </div>
    {% endif %}
{% endblock %}