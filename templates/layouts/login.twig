{% extends 'layouts/app.twig' %}

{% block content %}
    <h1>Authentication</h1>

    <div class="call-to-action">
        Please log in to the system using Skuuper CAT credentials
    </div>

    <!-- File form -->
    <form method="post" class="form" action="{{ base_uri }}aligner/process" enctype="multipart/form-data">
        <div class="col-md-12">
            <div class="form-group text-center">
                <label for="upload_file" class="hidden">Upload file:</label>
                <input type="file" name="upload_file" id="upload_file" required="required" data-buttonName="btn-default" data-input="false" class="filestyle">
            </div>
            <button type="submit" class="btn btn-lg btn-primary">
                <i class='fa fa-upload'></i> Upload TMX
            </button>
        </div>
    </form>
    <!-- File form -->

    <!-- Skuuper login form with return back here  -->
{% endblock %}