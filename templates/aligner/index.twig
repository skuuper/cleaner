{% extends 'layouts/app.twig' %}

{% block content %}
    <h1>Align TMX File</h1>

    <div class="call-to-action">
        Upload a TMX file and clean/align it here. You can download the aligned version.
    </div>

    <!-- File form -->
    <form method="post" class="form" action="{{ base_uri }}aligner/process" enctype="multipart/form-data">
        <div class="col-md-12">
            <div class="form-group text-center">
                <label for="upload_file" class="hidden">Upload file:</label>
                <input type="file" name="upload_file" id="upload_file" required="required" data-buttonName="btn-default" data-input="false" class="filestyle">
            </div>
            <button type="submit" class="btn btn-lg btn-primary">
                <i class='fa fa-upload'></i> Upload TMX
            </button>
        </div>
    </form>
<!-- File form -->
{% endblock %}            