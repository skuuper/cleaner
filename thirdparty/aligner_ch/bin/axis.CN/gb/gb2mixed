#!/usr/bin/perl
#
# Usage: gb2mixed <GB text>
# Author:  Xiaoyi Ma, LDC, 11/14/03
# Purpose:     translates 2-byte GB characters into their Roman
#              equivalents, where possible
#

while (<>) {
    s/\r?\n$//;
    s/ /ssspppaaaccceee/g;
    s/[\x00-\x7F]|[\x81-\xFE][\x40-\x7E\x80-\xFE]/ $& /g;
    @_ = split ' ', $_;
    foreach $char (@_) {
	if ($char eq "¡¡") {
	    $out .= " ";
	} elsif ($char eq "¡¢") {
	    $out .= "\,";
	} elsif ($char eq "¡£") {
	    $out .= "\.";
	} elsif ($char eq "¡¤") {
	    $out .= "\ ";
	} elsif ($char eq "¡¥") {
	    $out .= "\-";
	} elsif ($char eq "¡§") {
	    $out .= "\...";
	} elsif ($char eq "¡ª") {
	    $out .= "\-";
	} elsif ($char eq "¡«") {
	    $out .= "\-";
	} elsif ($char eq "¡­") {
	    $out .= "\...";
	} elsif ($char eq "¡®") {
	    $out .= "\`";
	} elsif ($char eq "¡¯") {
	    $out .= "\'";
	} elsif ($char eq "¡°") {
	    $out .= "\"";
	} elsif ($char eq "¡±") {
	    $out .= "\"";
	} elsif ($char eq "¡²") {
	    $out .= "\[";
	} elsif ($char eq "¡³") {
	    $out .= "\]";
	} elsif ($char eq "¡´") {
	    $out .= "\<";
	} elsif ($char eq "¡µ") {
	    $out .= "\>";
	} elsif ($char eq "¡¶") {
	    $out .= "\"";
	} elsif ($char eq "¡·") {
	    $out .= "\"";
	} elsif ($char eq "¡¸") {
	    $out .= "\`";
	} elsif ($char eq "¡¹") {
	    $out .= "\'";
	} elsif ($char eq "¡º") {
	    $out .= "\"";
	} elsif ($char eq "¡»") {
	    $out .= "\"";
	} elsif ($char eq "¡¼") {
	    $out .= "\[";
	} elsif ($char eq "¡½") {
	    $out .= "\]";
	} elsif ($char eq "¡¾") {
	    $out .= "\[";
	} elsif ($char eq "¡¿") {
	    $out .= "\]";
	} elsif ($char eq "¡Ã") {
	    $out .= "\:";
	} elsif ($char eq "¡ä") {
	    $out .= "\/";
	} elsif ($char eq "¡ç") {
	    $out .= "\$";
	} elsif ($char eq "¡ë") {
	    $out .= "\%";
	} elsif ($char eq "¡í") {
	    $out .= "\#";
	} elsif ($char eq "¡þ") {
	    $out .= "\=";
	} elsif ($char eq "¢±") {
	    $out .= "1";
	} elsif ($char eq "¢²") {
	    $out .= "2";
	} elsif ($char eq "¢³") {
	    $out .= "3";
	} elsif ($char eq "¢´") {
	    $out .= "4";
	} elsif ($char eq "¢µ") {
	    $out .= "5";
	} elsif ($char eq "¢¶") {
	    $out .= "6";
	} elsif ($char eq "¢·") {
	    $out .= "7";
	} elsif ($char eq "¢¸") {
	    $out .= "8";
	} elsif ($char eq "¢¹") {
	    $out .= "9";
	} elsif ($char eq "¢º") {
	    $out .= "10";
