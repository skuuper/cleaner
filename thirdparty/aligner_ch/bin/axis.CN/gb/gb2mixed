	    $out .= "14";
	} elsif ($char eq "¢¿") {
	    $out .= "15";
	} elsif ($char eq "¢À") {
	    $out .= "16";
	} elsif ($char eq "¢Á") {
	    $out .= "17";
	} elsif ($char eq "¢Â") {
	    $out .= "18";
	} elsif ($char eq "¢Ã") {
	    $out .= "19";
	} elsif ($char eq "¢Ä") {
	    $out .= "20";
	} elsif ($char eq "¢Å") {
	    $out .= "1";
