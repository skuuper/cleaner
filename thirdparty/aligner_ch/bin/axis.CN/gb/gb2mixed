	} elsif ($char eq "¢ó") {
	    $out .= "III";
	} elsif ($char eq "¢ô") {
	    $out .= "\IV";
	} elsif ($char eq "¢õ") {
	    $out .= "V";
	} elsif ($char eq "¢ö") {
	    $out .= "VI";
	} elsif ($char eq "¢÷") {
	    $out .= "VII";
	} elsif ($char eq "¢ø") {
	    $out .= "VIII";
	} elsif ($char eq "¢ù") {
	    $out .= "IX";
	} elsif ($char eq "¢ú") {
	    $out .= "X";
	} elsif ($char eq "¢û") {
	    $out .= "XI";
	} elsif ($char eq "¢ü") {
	    $out .= "XII";
	} elsif ($char eq "£¡") {
	    $out .= "\!";
	} elsif ($char eq "£¢") {
	    $out .= "\"";
	} elsif ($char eq "££") {
	    $out .= "\#";
	} elsif ($char eq "£¤") {
	    $out .= "\$";
	} elsif ($char eq "£¥") {
	    $out .= "\%";
	} elsif ($char eq "£¦") {
	    $out .= "\&";
	} elsif ($char eq "£§") {
	    $out .= "\'";
	} elsif ($char eq "£¨") {
	    $out .= "\(";
	} elsif ($char eq "£©") {
	    $out .= "\)";
	} elsif ($char eq "£ª") {
	    $out .= "\*";
	} elsif ($char eq "£«") {
	    $out .= "\+";
	} elsif ($char eq "£¬") {
	    $out .= "\,";
	} elsif ($char eq "£­") {
	    $out .= "\-";
	} elsif ($char eq "£®") {
	    $out .= "\.";
	} elsif ($char eq "£¯") {
	    $out .= "\/";
	} elsif ($char eq "£°") {
	    $out .= "0";
	} elsif ($char eq "£±") {
	    $out .= "1";
	} elsif ($char eq "£²") {
	    $out .= "2";
	} elsif ($char eq "£³") {
	    $out .= "3";
	} elsif ($char eq "£´") {
	    $out .= "4";
	} elsif ($char eq "£µ") {
	    $out .= "5";
	} elsif ($char eq "£¶") {
	    $out .= "6";
	} elsif ($char eq "£·") {
	    $out .= "7";
	} elsif ($char eq "£¸") {
	    $out .= "8";
	} elsif ($char eq "£¹") {
	    $out .= "9";
	} elsif ($char eq "£º") {
	    $out .= "\:";
	} elsif ($char eq "£»") {
	    $out .= "\;";
	} elsif ($char eq "£¼") {
	    $out .= "\<";
	} elsif ($char eq "£½") {
