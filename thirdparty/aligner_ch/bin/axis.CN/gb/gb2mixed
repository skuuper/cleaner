	    $out .= "Z";
	} elsif ($char eq "£Û") {
	    $out .= "\[";
	} elsif ($char eq "£Ü") {
	    $out .= "\\";
	} elsif ($char eq "£Ý") {
	    $out .= "\]";
	} elsif ($char eq "£Þ") {
	    $out .= "\^";
	} elsif ($char eq "£ß") {
	    $out .= "\_";
	} elsif ($char eq "£à") {
	    $out .= "\`";
	} elsif ($char eq "£á") {
	    $out .= "a";
	} elsif ($char eq "£â") {
	    $out .= "b";
	} elsif ($char eq "£ã") {
	    $out .= "c";
	} elsif ($char eq "£ä") {
