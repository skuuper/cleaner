	    $out .= "7";
	} elsif ($char eq "¢à") {
	    $out .= "8";
	} elsif ($char eq "¢á") {
	    $out .= "9";
	} elsif ($char eq "¢â") {
	    $out .= "10";
	} elsif ($char eq "¢å") {
	    $out .= "one";
	} elsif ($char eq "¢æ") {
	    $out .= "two";
	} elsif ($char eq "¢ç") {
