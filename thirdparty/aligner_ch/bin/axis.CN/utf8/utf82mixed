#!/usr/bin/perl
#
# Usage: utf82mixed <utf8 text>
# Author:  Xiaoyi Ma, LDC, 03/09/06
# Purpose: convert utf8 characters into their ASCII
#          equivalents, when possible
#

use utf8;

if (@ARGV == 1) {
    open STDIN, "<$ARGV[0]" or die "$0: cannot open $ARGV[0]!\n";
}

binmode STDIN, ":utf8";
binmode STDOUT, ":utf8";


while (<STDIN>) {
    s/　/ /g;
    s/、/\,/g;
    s/。/\./g;
    s/・/\ /g;
    s/ˉ/\-/g;
    s/¨/\.\.\./g;
    s/―/\-/g;
    s/～/\-/g;
    s/…/\.\.\./g;
    s/‘/\`/g;
    s/’/\'/g;
    s/“/\"/g;
    s/”/\"/g;
    s/〔/\[/g;
    s/〕/\]/g;
    s/〈/\</g;
    s/〉/\>/g;
    s/《/\"/g;
    s/》/\"/g;
    s/「/\`/g;
    s/」/\'/g;
    s/『/\"/g;
    s/』/\"/g;
    s/〖/\[/g;
    s/〗/\]/g;
    s/【/\[/g;
    s/】/\]/g;
    s/∶/\:/g;
    s/′/\'/g;
    s/＄/\$/g;
    s/‰/\%/g;
    s/№/\#/g;
    s/〓/\=/g;
    s/⒈/1/g;
    s/⒉/2/g;
    s/⒊/3/g;
    s/⒋/4/g;
    s/⒌/5/g;
    s/⒍/6/g;
    s/⒎/7/g;
    s/⒏/8/g;
    s/⒐/9/g;
    s/⒑/10/g;
    s/⒒/11/g;
    s/⒓/12/g;
    s/⒔/13/g;
    s/⒕/14/g;
    s/⒖/15/g;
    s/⒗/16/g;
    s/⒘/17/g;
    s/⒙/18/g;
    s/⒚/19/g;
    s/⒛/20/g;
    s/⑴/1/g;
    s/⑵/2/g;
    s/⑶/3/g;
    s/⑷/4/g;
    s/⑸/5/g;
    s/⑹/6/g;
    s/⑺/7/g;
    s/⑻/8/g;
    s/⑼/9/g;
    s/⑽/10/g;
    s/⑾/11/g;
    s/⑿/12/g;
    s/⒀/13/g;
    s/⒁/14/g;
    s/⒂/15/g;
    s/⒃/16/g;
    s/⒄/17/g;
    s/⒅/18/g;
    s/⒆/19/g;
    s/⒇/20/g;
    s/①/1/g;
    s/②/2/g;
    s/③/3/g;
    s/④/4/g;
    s/⑤/5/g;
    s/⑥/6/g;
    s/⑦/7/g;
    s/⑧/8/g;
    s/⑨/9/g;
    s/⑩/10/g;
    s/㈠/one/g;
    s/㈡/two/g;
    s/㈢/three/g;
    s/㈣/four/g;
    s/㈤/five/g;
    s/㈥/six/g;
    s/㈦/seven/g;
    s/㈧/eight/g;
    s/㈨/nine/g;
    s/㈩/ten/g;
    s/Ⅰ/I/g;
    s/Ⅱ/II/g;
    s/Ⅲ/III/g;
    s/Ⅳ/\IV/g;
    s/Ⅴ/V/g;
    s/Ⅵ/VI/g;
    s/Ⅶ/VII/g;
    s/Ⅷ/VIII/g;
    s/Ⅸ/IX/g;
    s/Ⅹ/X/g;
    s/Ⅺ/XI/g;
    s/Ⅻ/XII/g;
    s/！/\!/g;
    s/＂/\"/g;
    s/＃/\#/g;
    s/￥/\$/g;
    s/％/\%/g;
    s/＆/\&/g;
    s/＇/\'/g;
    s/（/\(/g;
    s/）/\)/g;
    s/＊/\*/g;
    s/＋/\+/g;
    s/，/\,/g;
    s/－/\-/g;
    s/．/\./g;
    s/／/\//g;
    s/０/0/g;
    s/１/1/g;
    s/２/2/g;
    s/３/3/g;
    s/４/4/g;
    s/５/5/g;
    s/６/6/g;
    s/７/7/g;
    s/８/8/g;
    s/９/9/g;
    s/：/\:/g;
    s/；/\;/g;
    s/＜/\</g;
    s/＝/\=/g;
    s/＞/\>/g;
    s/？/\?/g;
    s/＠/\@/g;
    s/Ａ/A/g;
    s/Ｂ/B/g;
    s/Ｃ/C/g;
    s/Ｄ/D/g;
    s/Ｅ/E/g;
    s/Ｆ/F/g;
    s/Ｇ/G/g;
    s/Ｈ/H/g;
    s/Ｉ/I/g;
    s/Ｊ/J/g;
    s/Ｋ/K/g;
    s/Ｌ/L/g;
    s/Ｍ/M/g;
    s/Ｎ/N/g;
    s/Ｏ/O/g;
    s/Ｐ/P/g;
    s/Ｑ/Q/g;
    s/Ｒ/R/g;
    s/Ｓ/S/g;
    s/Ｔ/T/g;
    s/Ｕ/U/g;
    s/Ｖ/V/g;
    s/Ｗ/W/g;
    s/Ｘ/X/g;
    s/Ｙ/Y/g;
    s/Ｚ/Z/g;
    s/［/\[/g;
    s/＼/\\/g;
    s/］/\]/g;
    s/＾/\^/g;
    s/＿/\_/g;
    s/｀/\`/g;
    s/ａ/a/g;
    s/ｂ/b/g;
    s/ｃ/c/g;
    s/ｄ/d/g;
    s/ｅ/e/g;
    s/ｆ/f/g;
    s/ｇ/g/g;
    s/ｈ/h/g;
    s/ｉ/i/g;
    s/ｊ/j/g;
    s/ｋ/k/g;
    s/ｌ/l/g;
    s/ｍ/m/g;
    s/ｎ/n/g;
    s/ｏ/o/g;
    s/ｐ/p/g;
    s/ｑ/q/g;
    s/ｒ/r/g;
    s/ｓ/s/g;
    s/ｔ/t/g;
    s/ｕ/u/g;
    s/ｖ/v/g;
    s/ｗ/w/g;
    s/ｘ/x/g;
    s/ｙ/y/g;
    s/ｚ/z/g;
    s/｛/\{/g;
    s/｜/\|/g;
    s/｝/\}/g;
    print;
}
